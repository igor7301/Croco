<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background"
              android:paddingLeft="@dimen/wordPaddingLeft"
        >

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:paddingRight="10dp"
                android:id="@+id/txtName" android:layout_gravity="center_horizontal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:id="@+id/nameOfPlayer" android:layout_gravity="center_horizontal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardId"
                android:id="@+id/txtCardId" android:layout_gravity="right"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:id="@+id/cardID" android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defaultWord"
                android:textSize="@dimen/wordSize"

                android:paddingBottom="@dimen/wordPaddingBottom"
                android:id="@+id/txtWord1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defaultWord"
                android:textSize="@dimen/wordSize"
                android:paddingBottom="@dimen/wordPaddingBottom"
                android:id="@+id/txtWord2"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defaultWord"
                android:textSize="@dimen/wordSize"
                android:paddingBottom="@dimen/wordPaddingBottom"
                android:id="@+id/txtWord3"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defaultWord"
                android:textSize="@dimen/wordSize"
                android:paddingBottom="@dimen/wordPaddingBottom"
                android:id="@+id/txtWord4"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defaultWord"
                android:textSize="@dimen/wordSize"
                android:paddingBottom="@dimen/wordPaddingBottom"
                android:id="@+id/txtWord5"/>
    </LinearLayout>>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defaultWord"
                android:textSize="@dimen/wordSize"
                android:textColor="@color/wordOnActiveCard"
                android:textColorHighlight="@android:color/widget_edittext_dark"
                android:paddingBottom="@dimen/wordPaddingBottom"
                android:id="@+id/txtWord6"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defaultWord"
                android:textSize="@dimen/wordSize"
                android:paddingBottom="@dimen/wordPaddingBottom"
                android:id="@+id/txtWord7"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/defaultWord"
            android:textSize="@dimen/wordSize"
            android:paddingBottom="@dimen/wordPaddingBottom"
            android:id="@+id/txtWord8"/>
</LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_button"
                android:background="@android:color/transparent"
                android:id="@+id/btnGetPreviousCard" android:layout_gravity="left|bottom"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/forward_button"
                android:background="@android:color/transparent"
                android:id="@+id/btnGetNextCard" android:layout_gravity="right|bottom"/>

    </FrameLayout>

</LinearLayout>