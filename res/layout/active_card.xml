<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background"
              android:paddingLeft="@dimen/wordPaddingLeft"
        >

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:paddingRight="10dp"
                android:id="@+id/txtName" android:layout_gravity="center_horizontal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:id="@+id/nameOfPlayer" android:layout_gravity="center_horizontal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardId"
                android:id="@+id/txtCardId" android:layout_gravity="right"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:id="@+id/cardID" android:layout_gravity="center_horizontal"/>
    </LinearLayout>




    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:text="@string/defaultWord"
            android:textSize="@dimen/wordSize"

            >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/defaultWord"
                android:id="@+id/btnBlock1"
                android:textAlignment="gravity"
                android:gravity="left|center"
                android:src="@drawable/worlds_frame"
                />

        <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
                android:src="@drawable/points_block1_inactive" android:id="@+id/imgPointsBlock1"/>


    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">

        <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
                   android:src="@drawable/points_block2_inactive" android:id="@+id/imgPointsBlock2"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/defaultWord"
                android:id="@+id/btnBlock2"
                android:textAlignment="gravity"
                android:gravity="right|center"
                android:src="@drawable/worlds_frame"
                android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:text="@string/defaultWord"
            android:textSize="@dimen/wordSize"

            >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/defaultWord"
                android:id="@+id/btnBlock3"
                android:textAlignment="gravity"
                android:gravity="left|center"
                android:src="@drawable/worlds_frame"
                android:layout_weight="2"
                />
        <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
                   android:src="@drawable/points_block2_inactive" android:id="@+id/imgPointsBlock3"/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">

        <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
                   android:src="@drawable/points_block4_inactive" android:id="@+id/imgPointsBlock4"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/defaultWord"
                android:id="@+id/btnBlock4"
                android:textAlignment="gravity"
                android:gravity="right|center"
                android:src="@drawable/worlds_frame"
                android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:text="@string/defaultWord"
            android:textSize="@dimen/wordSize"

            >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/defaultWord"
                android:id="@+id/btnBlock5"
                android:textAlignment="gravity"
                android:gravity="left|center"
                android:src="@drawable/worlds_frame"
                android:layout_weight="1"/>

        <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
                   android:src="@drawable/points_block5_inactive" android:id="@+id/imgPointsBlock5"/>

    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_button"
                android:background="@android:color/transparent"
                android:id="@+id/btnGetPreviousCard" android:layout_gravity="left|bottom"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/forward_button"
                android:background="@android:color/transparent"
                android:id="@+id/btnGetNextCard" android:layout_gravity="right|bottom"/>

    </FrameLayout>

</LinearLayout>